---
import { Icon } from "astro-icon/components";

const { text } = Astro.props;
const iconName = "material-symbols-light:lab-profile-outline-rounded"
---
<section>
  <div class="flex">
    <div class="left">
      <Icon name={iconName} class="icon" aria-label={text} />
      <div class="gradient" />
    </div>
    <!-- <h1 set:html={text}></h1> -->
  </div>
</section>

<style>
  .flex {
    display: flex;
    align-items: end;
    margin-top: 2rem;
  }

  .left {
    width: 84px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    gap: 2rem;
  }

  .icon {
    font-size: 2.5rem;
    color: var(--color-brand-white)
  }

  .gradient {
    width: 3px;
    height: 350px;
    background: linear-gradient(var(--color-accent-purple), var(--color-accent-green));
    border-radius: 2px;
  }
</style>