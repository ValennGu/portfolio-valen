---
import Tag from './Tag.astro';
import Link from './Link.astro';

const { title, description, thumbnail, technologies, actions } = Astro.props;
---
<div class="project-container">
  <img src={thumbnail} alt={`${title}`} width="50%"/>
  <div>
    <h2>{title}</h2>
    <div class="row">
      {technologies && technologies.map((tech: { name: any; icon: any; color: any }) =>
        <Tag
          name={tech.name}
          icon={tech.icon}
          color={tech.color}
        />
      )}
    </div>
    <p>{description}</p>
    <div class="row">
      {actions && actions.map((action: { name: any; url: any; icon: any; iconPosition: any; }) =>
        <Link
          text={action.name}
          href={action.url}
          icon={action.icon}
          iconPosition={action.iconPosition}
        />
      )}
    </div>
  </div>
</div>

<style>
  .project-container {
    display: flex;
    gap: 24px;
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 3rem;

    @media (min-width: 820px) {
      max-height: 275px;
    }
    
    @media (max-width: 820px) {
      flex-wrap: wrap;
      padding: 0 1rem 0 1rem;
    }
  }

  .row {
    display: flex;
    gap: .5rem;
  }

  img {
    flex: 1 1;
    border-radius: .5rem;
    border: solid 1px rgb(39, 39, 42, 1);
    object-fit: cover;
    object-position: top;
  }

  div {
    flex: 1 1;
  }
</style>