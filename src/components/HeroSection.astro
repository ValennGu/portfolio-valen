---
const { text } = Astro.props;
---
<section>
  <div class="flex">
    <div class="left">
      <div class="circle" />
      <div class="gradient" />
    </div>
    <h1 set:html={text}></h1>
  </div>
</section>

<style>
  .flex {
    display: flex;
    align-items: end;
  }

  .left {
    width: 84px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    gap: 10px;
  }

  .circle {
    width: 12px;
    height: 12px;
    border: solid 2px rgba(255, 255, 255, 0.5);
    border-radius: 50%;
  }

  .gradient {
    width: 3px;
    height: 150px;
    background: linear-gradient(var(--color-background),var(--color-accent-purple));
    border-radius: 2px;
  }
</style>