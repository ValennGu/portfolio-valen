---
import { Icon } from "astro-icon/components";
import Link from "./Link.astro";
import Tag from "./Tag.astro";

const {
  companyName,
  jobTitle,
  jobDescription,
  linkedInUrl,
  period,
  logoUrl
} = Astro.props;
---
<div class="experience-container">
  <div class="left box">
    <img src={logoUrl} alt={`${companyName}`} width="70px" height="70px"/>
    <div class="info">
      <div class="info-2">
        <h2>{companyName}</h2>
        <Tag name={period.timeSpent} icon="ri:timer-2-line" color="#928BF9"/>
      </div>
      <div class="date">
        <Icon name="ri:calendar-fill" class="icon" aria-label="period" />
        <p>{period.from} - {period.to}</p>
      </div>
    </div>
  </div>
  
  <div class="right box">
    <h3>{jobTitle}</h3>
    <p>{jobDescription}</p>
    <Link
      text="More about the company"
      href={linkedInUrl}
      icon="ri:arrow-right-line"
      iconPosition="right"
    />
   </div>
</div>

<style>
  .experience-container {
    display: flex;
    gap: var(--flex-gap-24);
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 3rem;

    @media (max-width: 820px) {
      flex-wrap: wrap;
    }
  }

  img {
    border-radius: .5rem;
    border: solid 1px rgb(39, 39, 42, 1);
  }

  .info {
    display: flex;
    flex-direction: column;
  }

  .info-2 {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 10px;

    h2 {
      margin-bottom: 0;
    }
  }

  .date {
    display: flex;
    gap: 10px;
    align-items: center;

    p {
      margin: 0;
    }
  }

  .box {
    width: 100%;
  }

  .left {
    display: flex;
    gap: var(--flex-gap-24);
  }

  .icon {
    font-size: 1rem;
    color: var(--color-shy-white);
  }
</style>