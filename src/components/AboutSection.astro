---
import Button from "./Button.astro";
import Divider from "./Divider.astro";
import IconButton from "./IconButton.astro";

import aboutx from './../data/about.json';

const about = `
  Hey! My name is Valentin, I'm a software engineer based in Barcelona. <br />
  I've been building web applications for more than 7 years now with technologies like Angular, React, Vue, Svelte, Javascript and Typescript.
`
---
<section>
  <div class="title">
    <h1>Who I am</h1>
    <div class="hello">
      <IconButton url="https://github.com/ValennGu" icon="ri:github-fill"/>
      <IconButton url="https://www.linkedin.com/in/valentin-gutierrez-275409161/" icon="ri:linkedin-box-fill"/>
    </div>
  </div>
  <Divider />
  <p set:html={aboutx.description} />
  <Button text="Check out my LinkedIn" icon="ri:linkedin-box-fill"/>
</section>

<style>
  .title {
    display: flex;
    justify-content: space-between;
  }

  .hello {
    display: flex;
    gap: 5px;
  }
</style>